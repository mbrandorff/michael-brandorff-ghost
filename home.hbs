{{!< default}}
<header class="site-header">
	{{navigation}}
</header>

<main class="site-main home">

	{{#foreach posts}}

	<article class="postpreview postpreview--{{@index}} {{#unless feature_image}} no-image{{/unless}}">
		<div class="postpreview-content">

			<header class="postpreview-header">
				<h2 class="postpreview-title"><a href="{{url}}">{{title}}</a></h2>

				{{#if excerpt}}
				<section class="postpreview-excerpt">
					{{excerpt words="50"}}
				</section>
				{{/if}}
			</header>

			<div class="postpreview-timestamp timestamp">
				<time class="timestamp-date" datetime="{{date format='YYYY-MM-DD'}}">
					<p><span>{{date format="DD"}}</span>{{date format="MMM"}}</p>
				</time>
			</div>

			{{#if feature_image}}
			<img class="postpreview-photo" src="{{feature_image}}">
			{{/if}}
			
			<footer class="postpreview-meta meta">

				{{#if tags}}
					<span class="meta-tag"><i class="fas fa-tags"></i> {{tags autolink="false"}}</span>
				{{/if}}

				<span class="meta-reading-time"><i class="fas fa-stopwatch"></i> {{reading_time minute="1 min" minutes="% min"}}</span>

			</footer>
		</div>
	</article>

	{{#if @first}}
	<article class="cblock cblock--about about" id="about">
		<div class="cblock-content">
			
			{{#get "pages" slug="home" as |post|}}
			{{#post}}
			<section class="content-wrapper about-bio">

				{{content}}

			</section>
			{{/post}}
			{{/get}}
			{{!-- The big email subscribe modal content --}}
			{{#if @labs.members}}
			<section class="content-wrapper about-subscribe">
				{{> subscribe-form}}
			</section>
			{{/if}}
			<section class="content-wrapper about-insta">
				<div class="description">
					<h3>Instagram</h3>
					<p><a class="linkhover" href="https://www.instagram.com/michaelbrandorff/">@michaelbrandorff</a> / <a class="linkhover" href="https://www.instagram.com/explore/tags/michaelbrandorff/">#michaelbrandorff</a></p>
				</div>
				<div id="instafeed" class="instafeed">

				</div>
				<script type="text/javascript">
				var feed = new Instafeed({
					get: 'user',
					userId: '254974762',
					accessToken: '254974762.1677ed0.fe1a1d176f204711a84abad73310f165',
					limit: '6'
				});
				feed.run();
				</script>
			</section>

		</div>
	</article>
	{{/if}}

	{{/foreach}}
</main>
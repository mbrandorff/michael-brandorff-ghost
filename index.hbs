{{!< default}}
<header class="site-header">
	{{navigation}}
</header>

<main class="site-main">

	{{#foreach posts}}

	<article class="postpreview postpreview--{{@index}} {{post_class}}{{#unless feature_image}} no-image{{/unless}}">
		<div class="postpreview-content">

			<header class="postpreview-header">
				<h2 class="postpreview-title"><a href="{{url}}">{{title}}</a></h2>
				<section class="postpreview-excerpt">
					{{excerpt words="33"}}
				</section>
			</header>

			<div class="postpreview-timestamp timestamp">
				<time class="timestamp-date" datetime="{{date format='YYYY-MM-DD'}}">
					<p><span>{{date format="DD"}}</span>{{date format="MMM"}}</p>
				</time>
			</div>

			{{#if feature_image}}
			<img class="postpreview-photo" src="{{feature_image}}">
			{{/if}}
			
			<footer class="postpreview-meta meta">

				{{#if primary_tag}}
					<span class="meta-tag"><i class="fas fa-tags"></i> {{primary_tag.name}}</span>
				{{/if}}

				<span class="meta-reading-time"><i class="fas fa-stopwatch"></i> {{reading_time minute="1 min" minutes="% min"}}</span>

			</footer>
		</div>
	</article>

	{{/foreach}}
</main>
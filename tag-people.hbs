{{!< default}}
<header class="site-header">
	{{navigation}}
</header>

<main class="site-main people">

	{{#foreach posts}}

	<article class="post-card post-{{@index}} {{post_class}}{{#unless feature_image}} no-image{{/unless}}">
		<div class="post-card-content">

			<header class="post-card-header">
				<h2 class="post-card-title"><a href="{{url}}">{{title}}</a></h2>
			</header>
			
			<section class="post-card-excerpt">
				{{excerpt words="33"}}
			</section>

			<div class="post-timestamp">
				<time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">
					<p><span>{{date format="DD"}}</span>{{date format="MMM"}}</p>
				</time>
			</div>

			{{#if feature_image}}
			<img class="post-card-photo" src="{{feature_image}}">
			{{/if}}
			
			<footer class="post-card-meta">

				{{#if primary_tag}}
					<span class="post-tag"><i class="fas fa-tags"></i> {{primary_tag.name}}</span>
				{{/if}}

				<span class="post-reading-time"><i class="fas fa-stopwatch"></i> {{reading_time minute="1 min" minutes="% min"}}</span>

			</footer>
		</div>
	</article>

	{{#if @first}}
	<article class="site-cblock cblock-people">
		<div class="site-cblock-content">
		{{#get "posts" slug="people" as |post|}}
			{{#post}}
			<section class="content-wrapper people-bio">

				{{content}}

			</section>
			{{/post}}
		{{/get}}
		</div>
	</article>
	{{/if}}

	{{/foreach}}
</main>